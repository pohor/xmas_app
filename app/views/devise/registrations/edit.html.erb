<div class="level">
  <div class="level-item">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, class: "label" %>
        <div class="control">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input is-primary" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-primary" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: "label" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input is-primary" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-primary" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: "label" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input is-primary" %>
      </div>

      <div class="actions has-text-centered">
        <%= f.submit "Update", class: "button is-primary is-fullwidth" %>
      </div>
    <% end %>
  </div>
</div>
<div class="level">
  <div class="level-item">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-fullwidth is-primary" %>
  </div>
</div>
</br>
<section class="section">
  <%= link_to "Back", :back, class: "button is-primary is-fullwidth" %>
</section>


