<%= form_for @occasion do |f| %>
  <%= hidden_field_tag :controller_name, "occasions"%>
  <%= f.label :name, class: "label" %>
  <%= f.text_field :name, class: "textarea is-primary", class: "input validate_this_field" %>
  <p id="name_help_text" style="display: none"></p>
  <%= f.label :date, class: "label" %>
  <%= f.date_field :date, class: "input validate_this_field" %>
  <p id="date_help_text" style="display: none"></p>
  <%= f.submit class: "button is-primary"%>
<% end %>